<!-- Ship Gallery Lightbox -->
<div class="ship-lightbox" id="ship-lightbox">
  <button class="ship-lightbox-close" aria-label="Galerij sluiten">&times;</button>
  <button class="ship-lightbox-nav ship-lightbox-prev" aria-label="Vorige foto">&lt;</button>
  <button class="ship-lightbox-nav ship-lightbox-next" aria-label="Volgende foto">&gt;</button>
  <img class="ship-lightbox-image" src="" alt="" />
  <div class="ship-lightbox-counter">
    <span id="ship-current">1</span> / <span id="ship-total">6</span>
  </div>
</div>

<script>
  (function () {
    const galleryImages = document.querySelectorAll('.ship-gallery img');
    const lightbox = document.getElementById('ship-lightbox');
    const lightboxImage = lightbox.querySelector('.ship-lightbox-image');
    const closeBtn = lightbox.querySelector('.ship-lightbox-close');
    const prevBtn = lightbox.querySelector('.ship-lightbox-prev');
    const nextBtn = lightbox.querySelector('.ship-lightbox-next');
    const currentEl = document.getElementById('ship-current');
    const totalEl = document.getElementById('ship-total');

    let currentIndex = 0;
    const totalImages = galleryImages.length;

    totalEl.textContent = totalImages;

    function openLightbox(index) {
      currentIndex = index;
      updateLightboxImage();
      lightbox.classList.add('ship-lightbox-open');
      document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
      lightbox.classList.remove('ship-lightbox-open');
      document.body.style.overflow = '';
    }

    function updateLightboxImage() {
      const img = galleryImages[currentIndex];
      lightboxImage.src = img.src;
      lightboxImage.alt = img.alt;
      currentEl.textContent = currentIndex + 1;
    }

    function showNext() {
      currentIndex = (currentIndex + 1) % totalImages;
      updateLightboxImage();
    }

    function showPrev() {
      currentIndex = (currentIndex - 1 + totalImages) % totalImages;
      updateLightboxImage();
    }

    // Event listeners
    galleryImages.forEach((img, index) => {
      img.style.cursor = 'pointer';
      img.addEventListener('click', () => openLightbox(index));
    });

    closeBtn.addEventListener('click', closeLightbox);
    prevBtn.addEventListener('click', showPrev);
    nextBtn.addEventListener('click', showNext);

    // Close on overlay click
    lightbox.addEventListener('click', e => {
      if (e.target === lightbox) {
        closeLightbox();
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', e => {
      if (!lightbox.classList.contains('ship-lightbox-open')) return;

      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowRight') showNext();
      if (e.key === 'ArrowLeft') showPrev();
    });
  })();
</script>

