        upgradeLabel.parentElement.style.cursor = 'pointer';
        upgradeDescription.style.opacity = '1';
        
        const data = upgradeData[packageValue];
        if (data) {
          upgradePrice.textContent = data.text;
          upgradeDescription.textContent = data.description;
        }
      }
      
      // Recalculate price
      calculatePrice();
    }
    
    function calculatePrice() {
      const selectedPackage = document.querySelector('input[name="package"]:checked');
      const guests = parseInt(guestsInput.value) || 0;
      
      // If no package selected or maatwerk, show dashes
      if (!selectedPackage || selectedPackage.value === 'maatwerk' || guests === 0) {
        basePriceEl.textContent = '‚Äî';
        totalPriceEl.textContent = '‚Äî';
        exvatPriceEl.textContent = '‚Äî';
        extrasLineEl.style.display = 'none';
        return;
      }
      
      const packageValue = selectedPackage.value;
      const packagePrice = packagePrices[packageValue] || 0;
      
      // Calculate base price (package + luxury upgrade if checked)
      let basePrice = packagePrice * guests;
      
      if (luxuryCheckbox.checked && upgradeData[packageValue]) {
        basePrice += upgradeData[packageValue].price * guests;
      }
      
      // Calculate extras
      let extrasTotal = 0;
      
      if (djCheckbox && djCheckbox.checked) {
        extrasTotal += fixedExtras.dj;
      }
      if (photoCheckbox && photoCheckbox.checked) {
        extrasTotal += fixedExtras.fotograaf;
      }
      if (accordionCheckbox && accordionCheckbox.checked) {
        extrasTotal += fixedExtras.accordeon;
      }
      if (oysterCheckbox && oysterCheckbox.checked) {
        extrasTotal += perPersonExtras.oester * guests;
      }
      
      // Update display
      basePriceEl.textContent = '‚Ç¨' + basePrice.toLocaleString('nl-NL');
      
      if (extrasTotal > 0) {
        extrasPriceEl.textContent = '‚Ç¨' + extrasTotal.toLocaleString('nl-NL');
        extrasLineEl.style.display = 'flex';
      } else {
        extrasLineEl.style.display = 'none';
      }
      
      const total = basePrice + extrasTotal;
      totalPriceEl.textContent = '‚Ç¨' + total.toLocaleString('nl-NL');
      
      // Calculate price excluding 21% VAT
      const exVat = total / 1.21;
      exvatPriceEl.textContent = '‚Ç¨' + Math.round(exVat).toLocaleString('nl-NL');
    }
    
    // Listen for package selection changes
    packageRadios.forEach(radio => {
      radio.addEventListener('change', updateUpgrade);
    });
    
    // Listen for guest count changes
    if (guestsInput) {
      guestsInput.addEventListener('input', calculatePrice);
    }
    
    // Listen for checkbox changes
    [luxuryCheckbox, djCheckbox, photoCheckbox, oysterCheckbox, accordionCheckbox].forEach(checkbox => {
      if (checkbox) {
        checkbox.addEventListener('change', calculatePrice);
      }
    });
    
    // Initialize on page load
    updateUpgrade();
  })();
  
  // Modal handling
  (function() {
    // Get all modal triggers and modals
    const modalTriggers = document.querySelectorAll('[data-modal]');
    const modals = document.querySelectorAll('.modal');
    const modalCloses = document.querySelectorAll('.modal-close');
    
    // Open modal
    modalTriggers.forEach(trigger => {
      trigger.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation(); // Prevent label click
        const modalId = this.getAttribute('data-modal');
        const modal = document.getElementById(modalId);
        if (modal) {
          modal.classList.add('modal-open');
          document.body.style.overflow = 'hidden';
        }
      });
    });
    
    // Close modal
    function closeModal(modal) {
      modal.classList.remove('modal-open');
      document.body.style.overflow = '';
    }
    
    // Close buttons
    modalCloses.forEach(closeBtn => {
      closeBtn.addEventListener('click', function() {
        const modal = this.closest('.modal');
        closeModal(modal);
      });
    });
    
    // Click outside modal content
    modals.forEach(modal => {
      modal.addEventListener('click', function(e) {
        if (e.target === this) {
          closeModal(this);
        }
      });
    });
    
    // Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        modals.forEach(modal => {
          if (modal.classList.contains('modal-open')) {
            closeModal(modal);
          }
        });
      }
    });
  })();
</script>
